{
  "name": "devduel",
  "private": true,
  "version": "1.0.1",
  "description": "Платформа для соревнований по программированию",
  "author": "DevDuel",
  "main": "main.js",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "npm run build && npm run electron",
    "clean-release": "node clean-release.js",
    "dist": "npm run clean-release && npm run build && electron-builder --publish never",
    "dist:win": "npm run clean-release && npm run build && electron-builder --win --publish never",
    "dist:mac": "npm run clean-release && npm run build && electron-builder --mac --publish never",
    "dist:linux": "npm run clean-release && npm run build && electron-builder --linux --publish never",
    "dist:all": "node build-all.js",
    "clear-cache": "node clear-cache.js"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.13",
    "@types/dotenv": "^8.2.3",
    "@types/react-icons": "^3.0.0",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.2",
    "emoji-picker-react": "^4.15.0",
    "framer-motion": "^12.23.24",
    "pixi.js": "^8.14.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^7.9.1",
    "react-virtuoso": "^4.14.1",
    "sass": "^1.93.0",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.13",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "monaco-editor": "^0.53.0",
    "tailwind-merge": "^3.3.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-monaco-editor-esm": "^2.0.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0"
  },
  "build": {
    "appId": "com.devduel.app",
    "productName": "DevDuel",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "asar": true,
    "files": [
      "dist/**/*",
      "main.js",
      "splash.html",
      "public/logo.svg",
      "package.json",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/.{bin,eslintrc,nycrc,prettierrc}",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": ["**/*"]
      }
    ],
    "extraFiles": [
      {
        "from": "public/logo.svg",
        "to": "logo.svg"
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "https://devduel.ru/updates"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/favicon.ico",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "identity": null
    },
    "linux": {
      "target": ["deb"],
      "icon": "build/icon.png",
      "category": "Development",
      "synopsis": "Платформа для соревнований по программированию"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DevDuel"
    }
  }
}